
generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id String @id @db.Uuid 
  //Same UUID as auth.users.id
  email String @unique
  seatNo    String?   @unique
  profilePic String?
  fullName String?
  department String?
  batch String?
  bio String?
  createdAt DateTime @default(now())

  posts   Post[]  // ‚Üê Add this for opposite relation
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String?
  authorId  String   @db.Uuid
  createdAt DateTime @default(now())

  images PostImage[]
  author Profile    @relation(fields: [authorId], references: [id]) 
  // (bidirectional relation) Profile ki bh field ho for posts (opposite relation)
}

model PostImage {
  id     String @id @default(uuid())
  url    String
  postId String

  post Post @relation(fields: [postId], references: [id])
}

